<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFABAB"
    tools:context="nhom12.eauta.cookinginstructions.Controller.Activity_Home">

    <!-- Phần thanh tìm kiếm -->
    <LinearLayout
        android:id="@+id/herder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF8B3F"
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:paddingBottom="6dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:backgroundTint="#FFFFFF"
            app:srcCompat="@drawable/burger" />

        <EditText
            android:id="@+id/txtSearch"
            android:layout_width="250dp"
            android:layout_height="43dp"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="Tìm kiếm theo danh mục"
            android:padding="6dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:typeface="serif" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            app:srcCompat="@drawable/magnifying" />

        <ImageButton
            android:id="@+id/btnMenu2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            app:srcCompat="@drawable/notification" />
    </LinearLayout>

    <ImageView
        android:id="@+id/Banner"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        app:layout_constraintBottom_toTopOf="@id/body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/herder"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/banner4"
        tools:ignore="MissingConstraints" />

    <!-- GridView hiển thị danh mục -->

    <ScrollView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/Banner"
        app:layout_constraintBottom_toTopOf="@id/navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/body1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <GridView
                android:id="@+id/gvDishList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"/>
        </LinearLayout>
    </ScrollView>

    <!-- Phần navbar cố định ở cuối màn hình -->

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Button đầu tiên -->
        <ImageButton
            android:id="@+id/btnCook"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            app:srcCompat="@drawable/cookingtools" />

        <!-- Button thứ hai -->
        <ImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            app:srcCompat="@drawable/tym" />

        <!-- Button thứ ba -->
        <ImageButton
            android:id="@+id/btnMeoHay"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            app:srcCompat="@drawable/pan" />

        <ImageButton
            android:id="@+id/btnBiQuyet"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            app:srcCompat="@drawable/cooking" />
        <ImageButton
            android:id="@+id/btnAcount"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            app:srcCompat="@drawable/accountmanager" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
