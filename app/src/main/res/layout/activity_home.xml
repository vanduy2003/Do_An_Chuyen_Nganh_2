<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context="nhom12.eauta.cookinginstructions.Controller.Activity_Home">

    <!-- Nội dung chính -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Phần thanh tìm kiếm -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF8B3F"
            android:orientation="horizontal"
            android:paddingTop="25dp"
            android:paddingBottom="6dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:background="#00000000"
                android:backgroundTint="#FFFFFF"
                app:srcCompat="@drawable/burger" />

            <EditText
                android:id="@+id/txtSearch"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Tìm kiếm theo danh mục"
                android:padding="6dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:typeface="serif" />

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00000000"
                app:srcCompat="@drawable/magnifying" />

            <ImageButton
                android:id="@+id/btnMenu2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00000000"
                app:srcCompat="@drawable/notification" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/navbar"
            app:layout_constraintTop_toBottomOf="@id/header">

            <LinearLayout
                android:id="@+id/body1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Banner"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    app:layout_constraintBottom_toTopOf="@id/body"
                    app:layout_constraintTop_toBottomOf="@id/header"
                    app:srcCompat="@drawable/banner4"
                    tools:ignore="MissingConstraints" />

                <GridView
                    android:id="@+id/gvDishList"
                    android:layout_width="match_parent"
                    android:layout_height="1650dp"
                    android:numColumns="3" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/red"
                    android:drawableLeft="@drawable/magnifying"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:text="TOP TÌM KIẾM"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <GridView
                    android:id="@+id/gvTopSearch"
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"
                    android:horizontalSpacing="8dp"
                    android:numColumns="2"
                    android:padding="8dp"
                    android:verticalSpacing="8dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#3FE900"
                    android:drawableLeft="@drawable/magnifying"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:text="GỢI Ý HÔM NAY"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <GridView
                    android:id="@+id/gvDishList2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2" />

            </LinearLayout>
        </ScrollView>

        <!-- Phần navbar cố định ở cuối màn hình -->
        <LinearLayout
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/btnCook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/cookingtools"
                android:gravity="center"
                android:text="Nấu Ăn"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/btnFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/tym"
                android:gravity="center"
                android:text="Yêu Thích"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/btnMeoHay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/pan"
                android:gravity="center"
                android:text="Mẹo Hay"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/btnBiQuyet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/cooking"
                android:gravity="center"
                android:text="Bí Quyết"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/btnAcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/accountmanager"
                android:gravity="center"
                android:text="Tài Khoản"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu" />

</androidx.drawerlayout.widget.DrawerLayout>